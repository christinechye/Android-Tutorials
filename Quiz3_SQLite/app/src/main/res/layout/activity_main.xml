<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD COURSE" />
    <EditText
        android:id="@+id/et_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_add"
        android:hint="Course name"
        android:inputType="textPersonName"/>
    <EditText
        android:id="@+id/et_prof"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_course"
        android:hint="Professor Name"
        android:inputType="textPersonName"/>
    <Button
        android:id="@+id/bt_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_prof"
        android:onClick="add"
        android:text="ADD"/>
    <Button
        android:id="@+id/bt_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_add"
        android:onClick="show"
        android:text="SHOW ALL"/>
    <Button
        android:id="@+id/bt_searchName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_show"
        android:onClick="search_name"
        android:text="SEARCH BY COURSE NAME"/>
    <Button
        android:id="@+id/bt_searchCourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_searchName"
        android:onClick="search_course"
        android:text="SEARCH BY PROFESSOR NAME"/>

</RelativeLayout>